# Table structure for table 'Sections'
#
CREATE TABLE Sections (
  sid INT NOT NULL,
  name TEXT(32) NOT NULL,
  homepage INT NOT NULL,
  colour CHAR(8),
  parent INT NOT NULL,
  readgid INT NOT NULL,
  writegid INT NOT NULL
) \g

CREATE SEQUENCE ON Sections STEP 1 VALUE 5 \g


